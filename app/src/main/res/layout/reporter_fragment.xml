<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
       >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/temp1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31/25C"
        android:textSize="20sp"/>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="气象："
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/qixiang1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云转阵雨"
            android:textSize="20sp"/>

    </RelativeLayout>
    <View
       android:layout_margin="2dp"
      android:layout_width="match_parent"
       android:layout_height="1dp"
      android:background="#ffc2c8cd"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明天"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/temp2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31/25C"
            android:textSize="20sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="气象："
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/qixiang2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中到大雨转雷阵雨"
            android:textSize="20sp"/>

    </RelativeLayout>
    <View
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc2c8cd"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后天"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/temp3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31/25C"
            android:textSize="20sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="气象："
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/qixiang3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暴雨"
            android:textSize="20sp"/>

    </RelativeLayout>
        <View
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffc2c8cd"
            />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="广州"
        android:textColor="@android:color/black"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/temp4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="31/25C"
        android:textSize="30sp"
        android:textColor="@android:color/holo_red_light"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="建议："
        android:textColor="#6699FF"
        />
    <TextView
        android:id="@+id/suggestion"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="涂擦SPF大于15、PA+防晒护肤品。感冒机率较低，避免长期处于空调屋中。适合穿T恤、短薄外套等夏季服装。"/>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/empty_layout"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/impotbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击更新最新天气"
            android:padding="10dp"
            android:background="#6699FF"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#6699FF"
            android:padding="15dp"
            android:text="若更新失败，请检查网络设置"/>

    </LinearLayout>

</LinearLayout>